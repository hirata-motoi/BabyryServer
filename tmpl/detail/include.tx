<style type="text/css">
  .img-box {
    min-height: 100%;
    width: 100%;
  }
  .img-detail {
  }
  .footer {
    display: -webkit-box;
    display: box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    width: 100%;
    background: #eee;
    padding: 8px 2px 8px;
  }
  .owl-item {
    width: 320px;
  }
  .stamp {
    text-shadow: 0 0 2px #000;
    color: #eee;
    text-decoration:none;
    display: inline;
  }
  .stamp-icon {
    width: 36px;
    height: 36px;
    display: inline;
    margin: 5px;
  }
  .stamp-container {
    position: absolute;
    width: 100%;
    bottom: 44px;
    font-size: 30px;
  }
  .listed-stamp {
    width: 36px;
    height: 36px;
    margin: 5px;
  }
  .modal-header {
    padding-top: 10px;
  }
  .cover {
    display: inline-block;
    background-color: #ccc;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: contain;
  }
  .full-size-screen {
    padding-left: 0px;
    padding-right: 0px;
  }
  .img-footer {
    position: absolute;
    bottom: 0px;
    height: 30px;
    width: 100%;
    font-size: 30px;
  }
  .comment-notice {
    font-size: 14px;
    float: right;
  }
  .stamp-edit {
    font-size: 14px;
    float: right;
    margin-right: 10px;
  }
  .bold {
    font-weight: bold;
  }
  .img-64-64 {
    width: 64px;
    height: 64px;
  }
</style>
<script type="text/javascript">
  function prevent(e) {
    e.stopPropagation();
    $("#stampAttachModal").modal({
      "backdrop": true
    });
  }
</script>

<div class="detail-container" style="display:none">
  <div class="owl-carousel owl-theme"></div>
</div>

<div id="item-tmpl" style="display:none">
  <div class="img-box cover" style="position: relative; background-color: black;">
    <!--<img src="" class="img-detail" />-->
    <div class="stamp-container"></div>
    <div class="img-footer">
      <!--<a href="#stampAttachModal" data-toggle="modal" data-backdrop="true" class="glyphicon glyphicon-plus-sign stamp-add-icon" style="text-shadow: 0 0 2px #000; color: #eee;text-decoration:none;" onClick="prevent(event)"></a>-->
      <span class="comment-notice"></span>
      <span class="stamp-edit">スタンプ編集</span>
    </div>
  </div>
</div>

<div id="stampAttachModal" class="modal fade" style="top: 0px; margin: 0 auto 20px; max-width: 100%; height: 500px;">
  <div class="modal-dialog" style="height: 0px;">
    <div class="modal-content" style="top: 200px;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3>pick stamps</h3>
      </div>
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>

<div id="commentModal" class="modal fade" style="top: auto; margin: 0 auto 20px; max-width: 100%; height: 500px;">
  <div class="modal-dialog">
    <div class="modal-content" style="background-color: black; margin-top: 100px; color: white;">
      <div class="modal-header" style="height: 40px;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top: -8px; opacity:0.8">×</button>
      </div>
      <div class="modal-body">

        <div class="comment-container" style="background-color: black; padding-top: 10px; padding-bottom: 10px; overflow: scroll; height: 250px;">
          <div class="media">
          </div>
        </div> <!-- comment-container -->
        <div>
          <textarea rows=2 style="width: 80%;" id="comment-textarea"></textarea>
          <button type="submit" id="comment-submit">投稿</button>
        </div>
      </div> <!-- modal-body -->
    </div> <!-- modal-content -->
  </div> <!-- modal-dialog -->
</div>

<script id="template-comment-item">
  <div class="media">
    <a class="pull-left">
      <img class="media-object img-64-64" alt="" src="<%= commenter_icon_url %>">
    </a>
    <div class="media-body">
      <div class="media-heading bold"><%= commenter_name %></div>
      <div><%= comment_text %></div>
    </div>
  </div>
</script>
